                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= order.products[i].quantity %></td>
                    <td><%= order.orderDate.toString().slice(0,15) %></td> 
                    <td class="orderStatusElem <%= order.OrderStatus === 'Pending' ? 'text-warning' : '' %>
