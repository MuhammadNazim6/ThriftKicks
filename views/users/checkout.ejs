                            <div class="checkout__input">

                                <% if(typeof address!=='undefined' && address.length> 0){

                                    for(let i=0;i< address.length; i++){ %>


                                        <p>
                                            <%= address[i].fullname %>
                                        </p>
                                        <p>
                                            <%= address[i].mobile %>
                                        </p>
                                        <p>
                                            <%= address[i].houseName %>
                                        </p>
                                        <p>
                                            <%= address[i].city %>
                                        </p>
                                        <p>
                                            <%= address[i].pincode %>
                                        </p>
                                        <p>
                                            <%= address[i].state %>
                                        </p>
                                        <p>
                                            <%= address[i].country %>
                                        </p>

                                        <div class="custom-control custom-checkbox custom-checkbox-lg mt-4">
