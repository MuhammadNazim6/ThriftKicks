                                </div>
                                <div class="checkout__input">
                                    <p>Town/City<span>*</span></p>
                                    <input type="text" placeholder="City" name="city" id="city">
                                </div>
                                <div class="checkout__input">
                                    <p>State<span>*</span></p>
                                    <input type="text" placeholder="State" name="state" id="state">
                                </div>
                                <div class="checkout__input">
                                    <p>Country<span>*</span></p>
                                    <input type="text" placeholder="Country" name="country" id="country">
                                </div>
                                <div class="checkout__input">
                                    <p>Postcode<span>*</span></p>
                                    <input type="text" placeholder="Pincode" name="pincode" id="pincode">
                                </div>

                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="checkout__input">
                                            <p>Phone<span>*</span></p>
                                            <input type="text" placeholder="Phone" name="mobile" id="mobile">
                                        </div>
                                    </div>
                                    <div class="col-lg-6">

                                    </div>
                                </div>

                            </form>

                            <button type="button" class="btn btn-dark" id="addAddressButton">Add Address</button>


                        </div>
                        <div class="col-lg-4 col-md-6">
                            <div class="checkout__order">
                                <h4 class="order__title">Your order</h4>
                                <div class="checkout__order__products">Product <span>Total</span></div>
                                <ul class="checkout__total__products">
                                    <% for(let i=0; i < cart.products.length; i++){%>
                                        <li>0<%=i+1%>.&nbsp;<%=cart.products[i].productId.productName %> <span>₹
                                                        <%=cart.products[i].productId.actualPrice *
                                                            cart.products[i].quantity%></span></li>
                                        <% } %>

                                            <ul class="checkout__total__all">
                                                <li>Subtotal <span>₹ <%= totalAmount %></span></li>
                                                <li>Total <span>₹ <%= totalAmount %></span></li>
                                            </ul>

                                            <p>.</p>

                                            <div class="checkout__input__checkbox">
                                                <label for="payment">
                                                    Cash on delivery
                                                    <input type="checkbox" id="payment">
                                                    <span class="checkmark"></span>
                                                </label>
                                            </div>
                                            <div class="checkout__input__checkbox">
                                                <label for="paypal">
                                                    UPI
                                                    <input type="checkbox" id="paypal">
                                                    <span class="checkmark"></span>
