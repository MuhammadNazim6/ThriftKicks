                                        <input type="text" name="city" id="city"
                                            class="form-control text-lg text-bold pl-3" value="" placeholder="City"
                                            required>
                                    </div>
                                    <div class="checkout__input">
                                        <p>State<span>*</span></p>
                                        <input type="text" name="state" id="state"
                                            class="form-control text-lg text-bold pl-3" value="" placeholder="State"
                                            required>
                                    </div>
                                    <div class="checkout__input">
                                        <p>Country<span>*</span></p>
                                        <input type="text" name="country" id="country"
                                            class="form-control text-lg text-bold pl-3" value="" placeholder="Country"
                                            required>
                                    </div>
                                    <div class="checkout__input">
                                        <p>Pincode<span>*</span></p>
                                        <input type="number" name="pincode" id="pincode"
                                            class="form-control text-lg text-bold pl-3" value="" placeholder="Pincode"
                                            required>
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="checkout__input">
                                                <p>Mobile<span>*</span></p>
                                                <input type="number" name="mobile" id="mobile"
                                                    class="form-control text-lg text-bold pl-3" value=""
                                                    placeholder="Mobile" required>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">

                                        </div>
                                    </div>

                                    <button type="button" class="btn btn-dark" id="addAddressButton">Add
                                        Address</button>
                                    <span id="addressAlert" class="alert alert-success text-white mr-5 mb-4"
                                        style="width:350px; display:none;">
                                        Address Added Successfully
                                    </span>

                        </div>
                        <div class="col-lg-4 col-md-6">
                            <div class="checkout__order">
                                <h4 class="order__title">Your order</h4>
                                <div class="checkout__order__products">Product <span>Total</span></div>
                                <ul class="checkout__total__products">
                                    <% for(let i=0; i < cart.products.length; i++){%>
                                        <li>0<%=i+1%>.&nbsp;<%=cart.products[i].productId.productName %> <span>₹
                                                        <%=cart.products[i].productId.actualPrice *
                                                            cart.products[i].quantity%>
                                                    </span></li>
                                        <% } %>

                                            <ul class="checkout__total__all">
