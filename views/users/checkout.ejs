                                            <label class="custom-control-label text-lg" for="customCheckbox">Choose the
                                                existing address</label>
                                        </div>

                                        <% } } %>

                            </div>
                            <h4 class="my-5">Add new Address</h4>
                            <!-- ccccccccccccccccccccccccccccccccccccccccccccccccccccc -->
                            <form class="address-form">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="checkout__input">
                                            <p>Name<span>*</span></p>
