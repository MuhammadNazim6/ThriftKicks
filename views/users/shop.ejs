    <script>
        //constants 
        const badge = document.getElementById('badge')

//add to cart functonlaity
        document.querySelectorAll(".addtoCartButton").forEach(function (button) {
            button.addEventListener("click", addtoCart)
            button.addEventListener('click',()=>{
                Swal.fire({
                    text: "Product added to cart",
                });
            })
        })

        async function addtoCart() {
            const prodId = this.getAttribute("data-product-id");
            // const dataToSend ={"name":"nazim"}
            const response = await fetch(`/api/addtoCart/${prodId}`, {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                },
            })
            if (!response.ok) {
                throw new Error("Failed to fetch data");
            }
            const data = await response.json()
            if(data.message){
                Swal.fire({
                    text: data.message,
                });
            }
            if(data.length){
                badge.textContent = data.length
                badge.classList.add('jumping')
                setTimeout(()=>{
                    badge.classList.remove('jumping')
                },500)
            }

        }


           //wishlist functionalities
        function hoverCardImage() {
            document.querySelector('.card-image').style.filter = 'brightness(80%)';
        }
        function unhoverCardImage() {
            document.querySelector('.card-image').style.filter = 'brightness(100%)';
        }

        const wishlistIcons = document.querySelectorAll('.wishlistIcon')
        wishlistIcons.forEach((icon)=>{
            icon.addEventListener('click',addWishlistFn)
        })

        async function addWishlistFn(){
            try {
                
                const prodId = this.getAttribute('data-prodId')
                const response = await fetch(`/addtoWishlist`, {
                method: "PATCH",
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify({prodId})
                
            })
            if (!response.ok) {
                throw new Error("Failed to fetch data");
            }
            const data = await response.json()
            if (data.message) {
                this.classList.add('text-danger')
                const Toast = Swal.mixin({
                toast: true,
                position: "top-end",
                showConfirmButton: false,
                timer: 1200,
                });
                Toast.fire({
                icon: "success",
                title: "Product added to wishlist"
                });

            }
            if (data.remMessage) {
                this.classList.remove('text-danger')
                this.style.color = 'white'
                const Toast = Swal.mixin({
                toast: true,
                position: "top-end",
                showConfirmButton: false,
                timer: 1200,
                });
                Toast.fire({
                icon: "info",
                title: "Product removed from wishlist"
                });
            }
            } catch (error) {
                console.log("Unable to add to wishlist");
                const Toast = Swal.mixin({
                toast: true,
                position: "Center",
                showConfirmButton: false,
                timer: 1200,
                });
                Toast.fire({
                icon: "warning",
                text: "Login or Signup for adding to wishlist"
                });
            }
        }

    </script>




