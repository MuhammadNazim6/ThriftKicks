  <div class="border-radius-xl mx-2 mx-md-3" style="min-height: 500px;">

  <main class="main-content border-radius-lg h-100 mt-5">
      <div class="container p-4">

          <% if (typeof orders !== 'undefined' && orders.length > 0) { %>
              <table class="table">
                  <thead>
                      <tr>
                          <th scope="col">#</th>
                          <th scope="col">Ordered On</th>
                          <th scope="col">Products</th>
                          <th scope="col">Images</th>
                          <th scope="col">Details</th>
                          
                      
                      </tr>
                  </thead>
                  <tbody class="table-group-divider">
                      
                      <% for (let i = 0; i < orders.length; i++) { %>
                          <tr>
                              <td scope="row"><%= i+1 %></td>
                              <td><%= orders[i].orderDate.toString().slice(0,15) %></td> 
                              <td>
                              <% for(let j=0;j< orders[i].products.length ; j++){ %>  
                                      <%= orders[i].products[j].productId.productName %>  <br>
                              <%  }   %>
                              </td>

                                  <td>
                                  <% for(let j=0;j< orders[i].products.length ; j++){ %>  
                                    
                                        <img class="mb-2" src="<%= orders[i].products[j].productId.image.path1 %>" style="height: 70px; width: 70px; border-radius: 2px;" ><br>
                                  <%  }   %>
                                  </td>

                                  <td>
                                    <a href="/orderDetails?ordId=<%= orders[i]._id %>">   <button class="btn btn-light orderBtn" >View order</button>   </a> <br>
                                    
                                  </td>
                      
                          </tr>
                      <% } %>
                      
                  </tbody>
              </table>
          <% } %>
          

      </div>
      </main>

</div>












