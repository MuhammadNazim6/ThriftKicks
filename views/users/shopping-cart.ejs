    <!-- Shopping Cart Section Begin -->
    <section class="shopping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="shopping__cart__table">
                        <table>



                            <% if(typeof cart !=='undefined' ) { %>
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(let i=0;i<cart.products.length ; i++){ %>


                                        <tr>
                                            <td class="product__cart__item">
                                                <div class="cart_image">
                                                    <img class="imaage"
                                                        src="<%= cart.products[i].productId.image.path1 %>" alt="">
                                                </div>
                                                <div class="product__cart__item__text">
                                                    <h6>
                                                        <%= cart.products[i].productId.productName %>
                                                    </h6>
                                                    <h5>₹ <%= cart.products[i].productId.actualPrice %>
                                                    </h5>
                                                </div>
                                            </td>
                                            <td class="quantity__item">
                                                <div class="quantity">
                                                    <div class="pro-qty-2">
                                                        <span class="text-lg">
                                                            <%= cart.products[i].quantity %>
                                                        </span>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="cart__price">₹ <%=
                                                    cart.products[i].quantity*cart.products[i].productId.actualPrice %>
                                            </td>
                                            <td class="cart__close"><i class="fa fa-close"></i></td>
                                        </tr>

                                        <% } %>





                                </tbody>

                                <% } else{ %>
                                    <img src="/assets/userside_images/empty_cart.jpg">
                                    <% } %>


                        </table>
                    </div>

                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="continue__btn">
                                <a href="/home">Continue Shopping</a>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="continue__btn update__btn">
                                <a href="#"><i class="fa fa-spinner"></i> Update cart</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="cart__discount">
                        <h6>Discount codes</h6>
                        <form action="#">
                            <input type="text" placeholder="Coupon code">
                            <button type="submit">Apply</button>
                        </form>
                    </div>
                    <div class="cart__total">
                        <h6>Cart total</h6>
                        <ul>
                            <li>Subtotal <span>rpes </span></li>
                            <li>Total <span>$ 169.50</span></li>
                        </ul>
                        <a href="#" class="primary-btn">Proceed to checkout</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Shopping Cart Section End -->



