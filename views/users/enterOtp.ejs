  <!-- Header Section End -->


  <div class="container">
    <div class="row otp-container">
     
      
      <span class="text-center text-lg text-dark"> Enter OTP sent to your mail "<%= email %>"</span>

      <div class="col-lg-6 mt-3">

        <form method="post">
          <div class="d-flex justify-content-center">
            
            <input type='text' name='otp' class="otp-holder p-3 txt-ind text-dark" id="otp">
            <input class="otp-button" type="submit">
          </div>
          <input type="hidden" value="<%= email %>" name="email">
          <br>
          <span class="d-flex justify-content-center"> OTP not recieved ?? &nbsp;&nbsp;<a type="submit" href="/resendOtp?"><b>resend
            otp</b> </a></span>
        </form>

      </div>

    </div>
    <br>
    <div class="d-flex justify-content-center">

      <input id="verified" type="hidden" value="<%= typeof message !== 'undefined' ? 'verified' : 'not-verified' %>" >
      <% if(typeof message !=='undefined' ){ %>

        <div class="alert alert-success text-center verif-message align-items-center" role="alert">
          <%= message %>
        </div>
      <div class=""></div>  
   
        <% } %>

          <% if(typeof fmessage !=='undefined' ){ %>

            <div class="alert alert-danger text-center verif-message" role="alert">
              <%= fmessage %>
            </div>
            <% } %>

    </div>


  </div>


